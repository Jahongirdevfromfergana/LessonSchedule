<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lessonschedule">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LessonSchedule"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".SimpleActivity"
            android:exported="false" />
        <activity
            android:name=".screen.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".screen.SelectedActivity"
            android:exported="false"
            android:label="@string/title_activity_selected"
            android:theme="@style/Theme.LessonSchedule.NoActionBar" />
        <activity
            android:name=".screen.popular_item.PopularItemActivity"
            android:exported="false" />
        <activity
            android:name=".screen.category_item.CategoryItemActivity"
            android:exported="false" />
        <activity
            android:name=".screen.feature_item.FeatureItemActivity"
            android:exported="false" />
        <activity
            android:name=".screen.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".screen.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>